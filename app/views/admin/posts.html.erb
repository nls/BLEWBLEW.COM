<h1>Mostrando posts</h1>

<table style="width: 90%">
  <tr>
    <th>Título</th>
    <th>Fecha</th>
  </tr>

<% @posts.reverse.each do |post| %>
  <tr>
    <td><%=h post.title %></td>
    <td><%=h(l post.created_at, :format => :long) %></td>
    <td><%= link_to 'Mostrar', post %></td>
    <td><%= link_to 'Editar', edit_post_path(post) %></td>
    <td><%= link_to 'Destruir', post, :confirm => ':O ¿Seguro(a)?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
